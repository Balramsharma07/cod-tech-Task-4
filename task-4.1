#include <stdio.h>
#include <string.h>

// Function to perform Run-Length Encoding
void runLengthEncode(const char *input, char *output) {
    int i, count;
    int len = strlen(input);
    int index = 0;

    for (i = 0; i < len; i++) {
        // Count occurrences of the current character
        count = 1;
        while (i < len - 1 && input[i] == input[i + 1]) {
            count++;
            i++;
        }

        // Add the character to the output
        output[index++] = input[i];

        // Add the count to the output
        index += sprintf(&output[index], "%d", count);
    }

    // Null-terminate the encoded string
    output[index] = '\0';
}

int main() {
    char input[100], output[200];

    printf("Enter a string to compress: ");
    scanf("%s", input);

    runLengthEncode(input, output);

    printf("Compressed string using RLE: %s\n", output);

    return 0;
}
